@model BloggieWebsite.Models.View_Model.EditTagRequest

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Edit Tag, This is Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
    @if(Model != null)
    {
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Id</label>
                <input type="text" id=" id" class="form-control" asp-for="Id" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" id="name" class="form-control" asp-for="Name" />
            </div>

            <div class="mb-3">
                <label class="form-label">Display Name</label>
                <input type="text" id="displayName" class="form-control" asp-for="DisplayName" />
            </div>

            <div class="mb-3">
                <button class="btn btn-dark" type="submit">Update</button>
            </div>

            <div class="mb-3">
                <button class="btn btn-danger" type="submit" asp-action="Delete" asp-controller="AdminTags">Delete</button>
            </div>
        </form>
    }
    else
    {
        <p>No Tags Found</p>
    }

</div>
