@{
}

@model List<BloggieWebsite.Models.Domain.Tag>

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Show All Tags, This is Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Display Name</th>
                    <th> </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tag in Model)
                {
                    <tr>
                        <td>@tag.Id</td>
                        <td>@tag.Name</td>
                        <td>@tag.DisplayName</td>
                        <td><a  class="btn btn-primary" asp-controller="AdminTags" asp-action="Edit"  asp-area="" asp-route-id="@tag.Id">Edit</a></td>
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <p>No Tags Found</p>
    }
</div>