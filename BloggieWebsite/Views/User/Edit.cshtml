@model BloggieWebsite.Models.View_Model.UserProfileViewModel

<style>
	body {
		background: #f7f7ff;
	}

	.main-body {
		padding: 15px;
	}
	.card {
		position: relative;
		display: flex;
		flex-direction: column;
		min-width: 0;
		word-wrap: break-word;
		background-color: #fff;
		background-clip: border-box;
		border: 0 solid transparent;
		border-radius: .25rem;
		margin-bottom: 1.5rem;
		box-shadow: 0 2px 6px 0 rgb(218 218 253 / 65%), 0 2px 6px 0 rgb(206 206 238 / 54%);
	}

	.me-2 {
		margin-right: .5rem !important;
	}
</style>


<div class="container">
	<div class="main-body">
		<form asp-action="SaveProfile" asp-controller="User" enctype="multipart/form-data" method="post">
			<div class="row">
				<div class="col-lg-4">
					<div class="card">
						<div class="card-body">
							<div class="d-flex flex-column align-items-center text-center">
								<img src="@Model.ProfilePictureUrl" alt="Admin" class="rounded-circle p-1 bg-primary" width="110">
								<div class="mt-3">
									<input type="file" name="ProfilePicture" class="form-control-file" />
									<input type="text" name="FullName" class="form-control mt-3" value="@Model.FullName" placeholder="Full Name" />
									<input type="text" name="JobTitle" class="form-control mt-3" value="@Model.JobTitle" placeholder="Job Title" />
									<input type="text" name="Location" class="form-control mt-3" value="@Model.Location" placeholder="Location" />
									<button type="submit" class="btn btn-primary mt-3">Save Changes</button>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="col-lg-8">
					<div class="card">
						<div class="card-body">
							<div class="row mb-3">
								<div class="col-sm-3">
									<h6 class="mb-0">Full Name</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input type="text" name="FullName" class="form-control" value="@Model.FullName">
								</div>
							</div>
							<div class="row mb-3">
								<div class="col-sm-3">
									<h6 class="mb-0">Email</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input type="email" name="Email" class="form-control" value="@Model.Email">
								</div>
							</div>
							<div class="row mb-3">
								<div class="col-sm-3">
									<h6 class="mb-0">Phone</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input type="text" name="Phone" class="form-control" value="@Model.Phone">
								</div>
							</div>
							<div class="row mb-3">
								<div class="col-sm-3">
									<h6 class="mb-0">Mobile</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input type="text" name="Mobile" class="form-control" value="@Model.Mobile">
								</div>
							</div>
							<div class="row mb-3">
								<div class="col-sm-3">
									<h6 class="mb-0">Address</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input type="text" name="Address" class="form-control" value="@Model.Address">
								</div>
							</div>
						</div>
					</div>
					<div class="card mt-3">
						<div class="card-body">
							<h5 class="d-flex align-items-center mb-3">Social Media Links</h5>
							<div class="row mb-3">
								<div class="col-sm-3">
									<h6 class="mb-0">Website</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input type="url" name="Website" class="form-control" value="@Model.Website">
								</div>
							</div>
							<div class="row mb-3">
								<div class="col-sm-3">
									<h6 class="mb-0">Github</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input type="text" name="Github" class="form-control" value="@Model.Github">
								</div>
							</div>
							<div class="row mb-3">
								<div class="col-sm-3">
									<h6 class="mb-0">Twitter</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input type="text" name="Twitter" class="form-control" value="@Model.Twitter">
								</div>
							</div>
							<div class="row mb-3">
								<div class="col-sm-3">
									<h6 class="mb-0">Instagram</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input type="text" name="Instagram" class="form-control" value="@Model.Instagram">
								</div>
							</div>
							<div class="row mb-3">
								<div class="col-sm-3">
									<h6 class="mb-0">Facebook</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input type="text" name="Facebook" class="form-control" value="@Model.Facebook">
								</div>
							</div>
						</div>
					</div>
					<div class="card mt-3">
						<div class="card-body">
							<h5 class="d-flex align-items-center mb-3">Project Status</h5>
							<div class="row mb-3">
								<div class="col-sm-3">
									<h6 class="mb-0">Web Design</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input type="range" name="WebDesignProgress" class="form-range" value="@Model.WebDesignProgress" min="0" max="100">
								</div>
							</div>
							<div class="row mb-3">
								<div class="col-sm-3">
									<h6 class="mb-0">Website Markup</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input type="range" name="WebsiteMarkupProgress" class="form-range" value="@Model.WebsiteMarkupProgress" min="0" max="100">
								</div>
							</div>
							<div class="row mb-3">
								<div class="col-sm-3">
									<h6 class="mb-0">One Page</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input type="range" name="OnePageProgress" class="form-range" value="@Model.OnePageProgress" min="0" max="100">
								</div>
							</div>
							<div class="row mb-3">
								<div class="col-sm-3">
									<h6 class="mb-0">Mobile Template</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input type="range" name="MobileTemplateProgress" class="form-range" value="@Model.MobileTemplateProgress" min="0" max="100">
								</div>
							</div>
							<div class="row mb-3">
								<div class="col-sm-3">
									<h6 class="mb-0">Backend API</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input type="range" name="BackendAPIProgress" class="form-range" value="@Model.BackendAPIProgress" min="0" max="100">
								</div>
							</div>
							<button type="submit" class="btn btn-primary">Save Changes</button>
						</div>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>
