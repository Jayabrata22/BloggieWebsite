@model List<BloggieWebsite.Models.Domain.BlogPost>

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Show All Blog Posts, This is Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
            <td>Id</td>
            <td>Heading</td>
            <td>Tags</td>
            <td> </td>
            </thead>
            <tbody>
                @foreach (var blogPost in Model)
                {
                    <tr>
                        <td>@blogPost.Id</td>
                        <td>@blogPost.Heading</td>
                        <td>
                            <div class="d-flex">
                                @foreach (var tag in blogPost.Tags)
                                {
                                    <span class="badge bg-secondary me-1">@tag.Name</span>
                                }
                            </div>
                        </td>
                        <td><a class="btn btn-primary" asp-controller="AdminBlogPost" asp-action="Edit" asp-area="" asp-route-id="@blogPost.Id">Edit</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Posts are avilable</p>
    }
</div>